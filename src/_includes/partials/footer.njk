{% from "partials/icon.njk" import icon %}

<footer class="site-foot">
    <div class="site-foot-nav container">
        <div class="site-foot-nav-left">
            <a aria-current="page" class="" href="/">
                {{ site.title }}
            </a> &copy; 2020 â€“ Published with
            <a class="site-foot-nav-item" href="https://ghost.org" target="_blank" rel="noopener noreferrer">
                Ghost
            </a>
        </div>
        {% if collections.docs %}
            <div class="site-foot-nav-right">
                {% for doc in collections.docs %}
                    <a {% if page.url == doc.url %}aria-current="page"{% endif %}  class="site-foot-nav-item" href="{{ doc.url }}">
                        {{ doc.meta_title if doc.meta_title else doc.title }}
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    </div>
    <div class="site-mast">
        {% if site.logo %}
            <div class="site-mast-left">
                <a {% if page.url == "/" %}aria-current="page"{% endif %} href="{{ site.url }}">
                    <img class="site-logo" src="{{ site.logo }}" alt="{{ site.title }}">
                </a>
            </div>
        {% endif %}
        <div class="site-mast-right">
            {% if site.twitter %}
                <a href="https://twitter.com/{{ site.twitter | replace("@", "") }}" class="site-nav-item" target="_blank" rel="noopener noreferrer">
                    {{ icon({ id: 'twitter' }) }}
                </a>
            {% endif %}
            {% if site.facebook %}
                <a href="https://www.facebook.com/{{ site.facebook }}" class="site-nav-item" target="_blank" rel="noopener noreferrer">
                    {{ icon({ id: 'facebook' }) }}
                </a>
            {% endif %}
            <a class="site-nav-item" href="https://feedly.com/i/subscription/feed/{{ site.url }}/rss/" target="_blank" rel="noopener noreferrer">
                {{ icon({ id: 'rss' }) }}
            </a>
        </div>
    </div>
    {% if page.url == '/' %}
        <div class="site-banner">
            <h1 class="site-banner-title">{{ site.title }}</h1>
            <p class="site-banner-desc">{{ site.description }}</p>
        </div>
    {% endif %}
</footer>
