---
pagination:
  data: collections.posts
  size: 7
  alias: posts
---

{% extends 'layouts/default.njk' %}
{% from "partials/card.njk" import card %}

{% set lang = "fr" %}
{% set title = "Posts" %}

{% block content %}
  <section class="post-feed">
    {% for post in posts %}
      {% if post.tags %}
        {% set french = false %}
        {% for tag in post.tags %}
          {% if tag == '#fr' %}
            {% set french = true %}
          {% endif %}
        {% endfor %}
        {% if french %}
          {{ card(post) }}
        {% endif %}
      {% endif %}
    {% endfor %}
  </section>

  {% include "partials/pagination.njk" %}
{% endblock%}
